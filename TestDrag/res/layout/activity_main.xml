<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="183dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgdrag"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="94dp"
            android:contentDescription="help me"
            android:src="@drawable/not_gate" />
        
          <ImageView
            android:id="@+id/imgdrag2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="94dp"
            android:contentDescription="help me"
            android:src="@drawable/and_gate" />
          
          <ImageView
            android:id="@+id/imgdrag3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="94dp"
            android:contentDescription="help me"
            android:src="@drawable/or_gate" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="10"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="0dp" >

        <ImageView
            android:id="@+id/imgdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="24dp"
            android:layout_row="0"
            android:background="@drawable/gridelement"
            android:contentDescription="help"
            android:src="@drawable/gridelement" />

        <ImageView
            android:id="@+id/imgdrop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="24dp"
            android:layout_row="0"
            android:background="@drawable/gridelement"
            android:contentDescription="help"
            android:src="@drawable/gridelement" />

        <ImageView
            android:id="@+id/imgdrop3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="24dp"
            android:layout_row="0"
            android:background="@drawable/gridelement"
            android:contentDescription="help"
            android:src="@drawable/gridelement" />
        <ImageView
            android:id="@+id/imgdrop4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginTop="24dp"
            android:layout_row="0"
            android:background="@drawable/gridelement"
            android:contentDescription="help"
            android:src="@drawable/gridelement" />
        <ImageView
            android:id="@+id/imgdrop5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginTop="24dp"
            android:layout_row="0"
            android:background="@drawable/gridelement"
            android:contentDescription="help"
            android:src="@drawable/gridelement" />
           <ImageView
            android:id="@+id/imgdrop6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_marginTop="24dp"
            android:layout_row="0"
            android:background="@drawable/gridelement"
            android:contentDescription="help"
            android:src="@drawable/gridelement" />
    </GridLayout>
 

</LinearLayout>